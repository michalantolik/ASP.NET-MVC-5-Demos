@{
    ViewBag.Title = "Errors";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    <p>Provoke application errors and check how they are handled.</p>

    <hr />

    <form method="post" action="/Errors/NullReferenceException">
        <button type="submit">NullReferenceException</button>
    </form>

    <br />

    <form method="post" action="/Errors/InvalidOperationException">
        <button type="submit">InvalidOperationException</button>
    </form>

    <br />

    <form method="post" action="/Errors/DivideByZeroException">
        <button type="submit">DivideByZeroException</button>
    </form>

</main>
